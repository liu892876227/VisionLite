<Window x:Class="VisionLite.CameraManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionLite"
        mc:Ignorable="d"
        Title="相机管理中心" Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 上半部分：设备控制 -->
        <GroupBox Grid.Row="0" Header="设备连接控制">
            <StackPanel Margin="5">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                    <Label Content="可用设备:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="DeviceComboBox" Width="300" VerticalAlignment="Center" SelectionChanged="DeviceComboBox_SelectionChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
                    <Button x:Name="FindCamButton" Content="查找设备" Width="80" Margin="5" Click="FindCamButton_Click"/>
                    <Button x:Name="OpenCamButton" Content="打开设备" Width="80" Margin="5" Click="OpenCamButton_Click"/>
                    <Button x:Name="CloseCamButton" Content="关闭设备" Width="80" Margin="5" Click="CloseCamButton_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="LightGray"/>

        <!-- 下半部分：参数设置 -->
        <GroupBox Grid.Row="2" Header="设备参数设置">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ParametersStackPanel">
                    <TextBlock Text="请在上方选择一个已打开的设备以查看其参数。" Margin="10" TextWrapping="Wrap" Foreground="Gray"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="3" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="准备就绪"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>