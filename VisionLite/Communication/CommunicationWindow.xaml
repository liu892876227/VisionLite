<Window x:Class="VisionLite.Communication.CommunicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="通讯管理" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧：连接列表和控制 -->
        <DockPanel Grid.Column="0">
            <TextBlock DockPanel.Dock="Top" Text="通讯连接列表" FontWeight="Bold" Margin="5"/>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Content="添加" Margin="5" Width="60" Click="AddButton_Click"/>
                <Button Content="删除" Margin="5" Width="60" Click="DeleteButton_Click"/>
            </StackPanel>
            <ListBox x:Name="ConnectionListBox" Margin="5" SelectionChanged="ConnectionListBox_SelectionChanged"/>
        </DockPanel>

        <!-- 右侧：配置和日志 -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 配置区域 -->
            <GroupBox Header="连接配置" x:Name="ConfigGroupBox" IsEnabled="False">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="连接名称:"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameTextBox" IsReadOnly="True"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="连接类型:"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ConnectionTypeComboBox" SelectionChanged="ConnectionTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="TCP客户端" IsSelected="True"/>
                        <ComboBoxItem Content="TCP服务器"/>
                    </ComboBox>

                    <Label Grid.Row="2" Grid.Column="0" Content="IP 地址:" x:Name="IpLabel"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="IpTextBox" Text="127.0.0.1"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="端口号:"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="PortTextBox" Text="8080"/>

                    <Button Grid.Row="4" Grid.Column="1" x:Name="ConnectButton" Content="连接" Margin="0,10,0,0" Width="100" HorizontalAlignment="Center" Click="ConnectButton_Click"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" x:Name="StatusTextBlock" Text="未连接" VerticalAlignment="Center" Margin="5,10,0,0"/>

                    <!-- 服务器专用信息显示 -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" x:Name="ServerInfoPanel" Visibility="Collapsed" Margin="0,10,0,0">
                        <TextBlock Text="客户端连接:" FontWeight="Bold"/>
                        <ListBox x:Name="ClientListBox" Height="100" Margin="0,5,0,0" SelectionChanged="ClientListBox_SelectionChanged"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="断开选中客户端" Width="120" Click="DisconnectClientButton_Click"/>
                            <TextBlock x:Name="ClientCountTextBlock" Text="连接数: 0" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- 日志区域 -->
            <GroupBox Grid.Row="1" Header="通讯日志" Margin="0,10,0,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
                        <TextBox x:Name="SendTextBox" Width="350"/>
                        <Button Content="发送" Width="60" Margin="5,0" Click="SendButton_Click"/>
                        <Button Content="清空" Width="60" Click="ClearLogButton_Click"/>
                    </StackPanel>
                    <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="LogTextBox" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
                    </ScrollViewer>
                </DockPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>